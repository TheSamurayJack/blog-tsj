---
import Nav from "./Nav.astro";
---

<header>
  <div class="container">
    <p class="logo">TheSamurayJack</p>
    <nav>
      <Nav />
    </nav>
  </div>
</header>

<style>
  header {
    background-color: #000000;
    width: 100%;
  }

  header .logo {
    margin: 0;
    padding: 5px 5px;
    font-weight: bold;
    color: whitesmoke;
    font-size: 1.2em;
  }

  /*se estila el container para movil*/
  header .container {
    max-width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  /*se estila cada elemento dentro del contenedor, el nav, y los ancores incluso cuando en estado :hover*/
  /*El nav es desactivado con display:none ya que no es necesario, pero se estila para darle funcionalidad en una proxima actualizacion*/
  header nav {
    display: flex;
    flex-direction: column;
    text-align: center;
    padding-bottom: 25px;
    display: none;
  }

  @media screen and (min-width: 636px) {
    header {
      position: fixed;
      width: 100%;
    }

    header .container {
      flex-direction: row;
      justify-content: space-between;
      margin-right: 0px;
    }

    header .logo {
      padding: 5px 5px;
    }

    header nav {
      flex-direction: row;
      padding-bottom: 0px;
      padding-right: 0px;
      display: flex;
    }
  }
</style>
